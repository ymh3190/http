<section id="commodity" class="page mes">
  <div class="content">
    <div class="top">
      <div class="header">
        <div class="left">
          <div class="wrapper-form">
            <form id="search" class="commodity">
              <%- include('../components/select', { id: 'type', inHtml: 'header', title: '구분' , values: types  }); %>
              <%- include('../components/select', { id: 'item_id', inHtml: 'header', title: '종류',  values: []  }); %>
              <%- include('../components/input', { id: 'name', inHtml: 'header', title: '원자재 명' }); %>
            </form>
          </div>
        </div>
        <div class="right">
          <%- include('../components/button', { id: 'search' , inHtml: 'header', title: '조회' ,  icon: ''  }); %>
          <%- include('../components/button', { id: 'print' , inHtml: 'header', title: '출력' ,  icon: ''  }); %>
        </div>
      </div>
    </div>
    <div class="bottom">
      <div class="contents">
        <div class="left">
          <div class="table">
            <div class="head">
              <div class="th">
                <span>구분</span>
              </div>
              <div class="th">
                <span>원자재 명</span>
              </div>
              <div class="th">
                <span>포장 단위</span>
              </div>
              <div class="th">
                <span>가격</span>
              </div>
            </div>
            <div class="body">
              <div id="list" class="commodity">
                <% commodities.forEach((commodity)=> { %>
                <% items.forEach((item)=> { %>
                <% if(commodity.item_id===item.id) { %>
                <% commodity.type = item.type %>
                <%- include('../components/row', { row: commodity, page: 'commodity', inHtml: 'list' }); %>
                <% } %>
                <% }); %>
                <% }); %>
                <%- include('../templates/row' , { row: {}, page: 'commodity', inHtml: 'list' }); %>
              </div>
            </div>
          </div>
        </div>
        <div class="right">
          <div class="detail">
            <div class="top">
              <form id="saveUpdate" class="commodity">
                <%- include('../components/input', { id:'name', inHtml: 'detail', title: '원자재 명'  }); %>
                <%- include('../components/select', { id:'type', inHtml: 'detail', title: '구분' , values: types  }); %>
                <%- include('../components/select', { id:'item_id', inHtml: 'detail', title: '종류' , values:[]  }); %>
                <%- include('../components/input', { id:'unit', inHtml: 'detail', title: '포장 단위'  }); %>
                <%- include('../components/input', { id:'price', inHtml: 'detail', title: '가격'  }); %>
                <%- include('../components/input', { id:'specification', inHtml: 'detail', title: '사양'  }); %>
                <%- include('../components/input', { id:'stock', inHtml: 'detail', title: '수량' }); %>
              </form>
            </div>
            <div class="bottom">
              <%- include('../components/button', { id: 'create' , inHtml: 'detail', title: '신규' ,  icon: '' }); %>
              <%- include('../components/button', { id: 'save' , inHtml: 'detail', title: '저장' ,  icon: ''  }); %>
              <%- include('../components/button', { id: 'delete', inHtml: 'detail', title: '삭제' ,  icon: ''  }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>