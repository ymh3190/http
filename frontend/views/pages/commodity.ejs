<section id="commodity" class="page">
  <div class="content">
    <div class="top">
      <div class="header">
        <div class="left">
          <div class="wrapper-form">
            <form id="search" class="commodity">
              <%- include('../components/select', { title: '구분' , name: 'type', values: types , inHtml: 'header' }); %>
              <%- include('../components/select', { title: '종류' , name: 'item_id' , values: [] , inHtml: 'header' }); %>
              <%- include('../components/input', { title: '원자재 명' , name: 'name', inHtml: 'header' }); %>
            </form>
          </div>
        </div>
        <div class="right">
          <%- include('../components/button', { title: '조회' , id: 'search' , icon: '' , inHtml: 'header' }); %>
          <%- include('../components/button', { title: '출력' , id: 'print' , icon: '' , inHtml: 'header' }); %>
        </div>
      </div>
    </div>
    <div class="bottom">
      <div class="contents">
        <div class="left">
          <div class="list">
            <div class="head">
              <div class="th">
                <span>구분</span>
              </div>
              <div class="th">
                <span>원자재 명</span>
              </div>
              <div class="th">
                <span>포장 단위</span>
              </div>
              <div class="th">
                <span>가격</span>
              </div>
            </div>
            <div class="body">
              <div id="row" class="list">
                <% commodities.forEach((commodity)=> { %>
                <% items.forEach((item)=> { %>
                <% if(commodity.item_id===item.id) { %>
                <% commodity.type = item.type %>
                <%- include('../components/row', { row: commodity, page: 'commodity', inHtml: 'list' }); %>
                <% } %>
                <% }); %>
                <% }); %>
                <%- include('../templates/row' , { row: {}, page: 'commodity', inHtml: 'list' }); %>
              </div>
            </div>
          </div>
        </div>
        <div class="right">
          <div class="detail">
            <div class="top">
              <form id="saveUpdate" class="commodity">
                <%- include('../components/input', { title: '원자재 명' , name: 'name' , inHtml: 'detail' }); %>
                <%- include('../components/select', { title: '구분' , name: 'type' , values: types , inHtml: 'detail' }); %>
                <%- include('../components/select', { title: '종류' , name: 'item_id' , values:[] , inHtml: 'detail' }); %>
                <%- include('../components/input', { title: '포장 단위' , name: 'unit' , inHtml: 'detail' }); %>
                <%- include('../components/input', { title: '가격' , name: 'price' , inHtml: 'detail' }); %>
                <%- include('../components/input', { title: '사양' , name: 'specification' , inHtml: 'detail' }); %>
                <%- include('../components/input', { title: '수량' , name: 'stock' , inHtml: 'detail' }); %>
              </form>
            </div>
            <div class="bottom">
              <%- include('../components/button', { title: '신규' , id: 'create' , icon: '' ,inHtml: 'detail' }); %>
              <%- include('../components/button', { title: '저장' , id: 'save' , icon: '' , inHtml: 'detail' }); %>
              <%- include('../components/button', { title: '삭제' , id: 'delete', icon: '' , inHtml: 'detail' }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>